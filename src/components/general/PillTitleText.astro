---
import "../../styles/global.css";
import "../../styles/reset.css";
import TitlePillPage from "./TitlePillPage.astro";
const { title, title3, paratext } = Astro.props;
---

<article>
  <TitlePillPage {title} />
  <h3>{title3}</h3>
  <p>{paratext}</p>
</article>

<style>
  article {
    display: inline;
    grid-template-columns: 1fr 1fr;
    margin-top: 4%;
    margin-bottom: 4%;

    h3 {
      color: #181818;
      font-family: "Cabin", sans-serif;
      font-size: 2.8rem;
      font-style: normal;
      font-weight: 700;
      line-height: 3.2rem;
      margin-top: 1%;
    }
    p {
      color: #595566;
      font-family: "Lato", sans-serif;
      font-size: 1rem;
      font-style: normal;
      font-weight: 400;
      line-height: 1.5rem;
      margin-top: 1%;
      margin-bottom: 1%;
    }
  }

  .middle {
    display: flex;
    text-align: center;
    align-items: center;
  }
</style>
