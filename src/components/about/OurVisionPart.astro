---
import "../../styles/global.css";
import "../../styles/reset.css";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import PillTitleText from "../general/PillTitleText.astro";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif}"
);
const { name, imgPath } = Astro.props;
if (!images[imgPath])
  throw new Error(
    `"${imgPath}" does not exist in glob: "src/assets/**/*.{jpeg,jpg,png,gif}"`
  );
---

<section>
  <div>
    <PillTitleText
      title="our vision"
      title3="Turn your ideas into reality."
      paratext="Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps."
    />
    <ul>
      <li>
        Bring to the table win-win survival strategies to ensure proactive
        domination. At the end of the day.
      </li>
      <li>
        Capitalize on low hanging fruit to identify a ballpark value added
        activity to beta test override the digital.
      </li>
    </ul>
  </div>
  <div>
    <figure>
      <Image src={images[imgPath]()} alt={name} />
    </figure>
  </div>
  <dl>
    <div>
      <dt>Successful Work</dt>
      <dd>1128+</dd>
    </div>
    <div>
      <dt>Team members</dt>
      <dd>908+</dd>
    </div>
    <div>
      <dt>Happy customers</dt>
      <dd>258+</dd>
    </div>
    <div>
      <dt>Creative Idea</dt>
      <dd>564+</dd>
    </div>
  </dl>
</section>

<style>
  section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    dl {
      grid-column: 1 / -1;
      gap: 9rem;
    }
  }
  /* Checkmark del */
  :root {
    --checkmark-icon: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"><path fill="%234EAF4E" d="M176.49 95.51a12 12 0 0 1 0 17l-56 56a12 12 0 0 1-17 0l-24-24a12 12 0 1 1 17-17L112 143l47.51-47.52a12 12 0 0 1 16.98.03M236 128A108 108 0 1 1 128 20a108.12 108.12 0 0 1 108 108m-24 0a84 84 0 1 0-84 84a84.09 84.09 0 0 0 84-84"/></svg>');
  }
  ul {
    display: grid;
    gap: 1rem;
  }
  li {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1rem;
    color: #595566;
  }
  li:before {
    content: "";
    flex-shrink: 0;
    width: 1.6rem;
    aspect-ratio: 1;
    background: var(--checkmark-icon) 50% 50% / contain no-repeat;
  }
  /* foto */
  figure {
    margin-inline: auto;
    max-width: 400px;
    margin: 3rem;
    display: block;
    position: relative;

    &::before {
      content: "";
      position: absolute;
      right: -1rem;
      top: -1rem;
      background: #4eaf4e;
      width: 150px;
      height: 100px;
      z-index: -1;
      border-radius: 1.25rem;
    }
  }
  /* dl stats */
  dl {
    margin: 3rem;
    text-align: center;

    display: flex;
    gap: 3rem;

    > * {
      display: flex;
      flex-direction: column-reverse;
      font-size: 1.125rem;
      color: #181818;

      :last-child {
        font-size: 3.125rem;
        font-weight: 500;
      }
    }
  }
</style>
