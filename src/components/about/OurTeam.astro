  <div class="cards">
    <PersonaCard
      imgPath="/src/assets/images/sarahjasmine.jpg"
      name="sarah jasmine"
      personanavn="Sarah Jasmine"
      description="Leverage agile frameworks to provide a robust synopsis for high level overviews."
    />
